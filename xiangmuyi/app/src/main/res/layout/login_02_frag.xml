<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/login_im_fanhui2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/afw"/>
        <TextView
            android:id="@+id/login_top"
            android:text="登录今日头条"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a0a0a0"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/login_02_ll_phone"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_gravity="center_vertical"
            android:id="@+id/login_02_iv_phone"
            android:background="@mipmap/ic_tip_mobile"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/login_02_phone"
            android:hint="请输入手机号"
            android:textSize="15sp"
            android:textColorHint="#a0a0a0"
            android:ems="10"
            android:maxLength="11"
            android:phoneNumber="true"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#a0a0a0"
        android:layout_below="@+id/login_02_ll_phone"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="80dp"
       />
    <LinearLayout
        android:layout_below="@id/login_02_ll_phone"
        android:id="@+id/login_02_ll_psw"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/login_02_iv_psw"
            android:background="@mipmap/ic_tip_pwd"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText
            android:layout_gravity="center"
            android:id="@+id/login_02_psw"
            android:hint="请输入密码"
            android:textSize="15sp"
            android:textColorHint="#a0a0a0"
            android:inputType="textPassword"
            android:ems="10"
            android:maxLength="20"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a0a0a0"
        android:layout_below="@+id/login_02_ll_psw"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="80dp"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/login_02_ll_psw"
        android:id="@+id/login_02_tv_zhuce"
        android:text="注册账号"
        android:layout_below="@id/login_02_ll_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_alignRight="@id/login_02_ll_psw"
        android:id="@+id/login_02_tv_wanji"
        android:text="忘记密码"
        android:layout_below="@id/login_02_ll_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/login_02_ll_psw"
        android:id="@+id/login_02_btn_login"
        android:text="登录"
        android:textColor="#ff00"
        android:background="@drawable/but_biankuang2"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="160dp"
        android:layout_height="30dp" />

</RelativeLayout>