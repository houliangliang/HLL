<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_activityphonelogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/phonelogin_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/afw"/>
        <TextView
            android:id="@+id/phonelogin_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号注册"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A0A0A0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rea1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phonelogin_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:text="已向手机15511018151发送验证码"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phonelogin_yanzhen"
                android:layout_below="@+id/phonelogin_send"
                android:textSize="15sp"
                android:textColorHint="#A0A0A0"
                android:background="@null"
                android:hint="请输入验证码"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="130dp"
                android:layout_marginTop="35dp"/>
            <TextView
                android:id="@+id/phonelogin_xian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/phonelogin_yanzhen"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="9dp"
                android:background="#a0a0a0"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_tip_code"
                android:id="@+id/phonelogin_im2"
                android:layout_alignTop="@id/phonelogin_yanzhen"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true"/>

            <Button
                android:text="重新发送 56"
                android:textColor="#A0A0A0"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:id="@+id/phonelogin_time"
                android:background="@drawable/but_biankuang2"
                android:layout_alignRight="@id/phonelogin_xian"
                android:layout_alignBottom="@id/phonelogin_xian"
                android:layout_marginBottom="8dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/phonelogin_mima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColorHint="#A0A0A0"
                android:background="@null"
                android:hint="请输入密码（6-20位英文或数字）"
                android:maxLength="20"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="60dp"
                android:paddingTop="30dp"/>


            <TextView
                android:id="@+id/phonelogin_xian2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/phonelogin_mima"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="9dp"


                android:background="#a0a0a0"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_tip_code"
                android:id="@+id/phonelogin_im3"
                android:layout_alignTop="@id/phonelogin_mima"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
<Button
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:layout_marginTop="30dp"
    android:text="登录"
    android:background="@drawable/but_biankuang3"
    android:textColor="#f00"/>

    </LinearLayout>


</LinearLayout>
