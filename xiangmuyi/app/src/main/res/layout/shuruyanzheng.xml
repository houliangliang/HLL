<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/login_iv_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/afw"/>
        <TextView
            android:id="@+id/login_top"
            android:text="找回密码"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a0a0a0"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:id="@+id/re"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true">
           <TextView
               android:textSize="20sp"
               android:layout_toLeftOf="@+id/shoujitextview"
               android:text="@string/yixiangshouji"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true" />
           <TextView
               android:textSize="20sp"
               android:layout_marginRight="3dp"
               android:layout_marginLeft="3dp"
               android:id="@+id/shoujitextview"
               android:textColor="#FD6868"
               android:layout_centerHorizontal="true"
               android:text="13696963837"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:textSize="20sp"
               android:layout_toRightOf="@+id/shoujitextview"
               android:text="@string/fasongyanzhengma"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true" />
       </RelativeLayout>

       <ImageView
           android:id="@+id/imageview"
           android:layout_marginTop="11dp"
           android:src="@mipmap/sending_code"
           android:layout_width="200dp"
           android:layout_height="50dp"
           android:layout_below="@+id/re"
           android:layout_centerHorizontal="true" />

       <EditText
           android:layout_marginTop="30dp"
           android:background="@null"
           android:textCursorDrawable="@drawable/color_cursor"
           android:id="@+id/yanzhengma"
           android:hint="@string/qingshuruyanzhengma"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/imageview"
           android:paddingTop="20dp"
           android:layout_marginLeft="70dp"
           android:layout_alignStart="@+id/imageview" />

       <ImageView
           android:layout_marginRight="5dp"
           android:layout_alignBottom="@id/yanzhengma"
           android:layout_toLeftOf="@id/yanzhengma"
           android:src="@mipmap/ic_tip_code"
           android:layout_width="25dp"
           android:layout_height="25dp" />

       <View
           android:layout_marginBottom="20dp"
           android:id="@+id/view1"
           android:layout_below="@id/yanzhengma"
           android:layout_centerHorizontal="true"
           android:background="#919191"
           android:layout_width="270dp"
           android:layout_height="1dp"/>


       <EditText
           android:background="@null"
           android:textCursorDrawable="@drawable/color_cursor"
           android:layout_marginTop="10dp"
           android:id="@+id/xinmima"
           android:hint="@string/qingshurumima"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/view1"
           android:layout_marginLeft="70dp"
           android:layout_alignStart="@+id/imageview" />
       <ImageView
           android:layout_marginRight="5dp"
           android:layout_alignBottom="@id/xinmima"
           android:layout_toLeftOf="@id/xinmima"
           android:src="@mipmap/ic_tip_pwd"
           android:layout_width="25dp"
           android:layout_height="25dp" />
       <View
           android:id="@+id/view2"
           android:layout_below="@id/xinmima"
           android:layout_centerHorizontal="true"
           android:background="#919191"
           android:layout_width="270dp"
           android:layout_height="1dp"/>


       <Button

           android:background="@drawable/shap"
           android:textSize="15sp"
           android:layout_marginTop="20dp"
           android:layout_below="@id/xinmima"
           android:layout_centerHorizontal="true"
           android:text="@string/xiayibu"
           android:id="@+id/buttxyb"
           android:layout_width="150dp"
           android:layout_height="40dp" />

       <Button
           android:id="@+id/chongxinfasong"
           android:layout_marginTop="5dp"
           android:background="@drawable/but_biankuang2"
           android:layout_marginLeft="245dp"
           android:textSize="13sp"
           android:text="@string/chongxinfasong"
           android:layout_width="wrap_content"
           android:layout_marginBottom="5dp"
           android:layout_height="40dp"

           android:layout_alignBottom="@+id/view1"/>
   </RelativeLayout>
</LinearLayout>
