<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/login_im_fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/afw"/>
    <TextView
        android:id="@+id/login_top"
        android:text="登录今日头条"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a0a0a0"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

    <ImageView
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/ttttt"
        android:layout_width="300dp"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/login_btn_phone"
        android:text="手机号登录"
        android:textColor="#ffffff"
        android:background="@drawable/but_biankuang"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="140dp"
        android:layout_height="28dp" />
    <Button
        android:id="@+id/login_btn_new"
        android:text="注册新账号"
        android:textColor="#ff0000"
        android:background="@drawable/but_biankuang2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="140dp"
        android:layout_height="28dp" />

    <TextView
        android:id="@+id/login_line_tv"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="-----------------其他方式登录-----------------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_iv_qq"
            android:background="@mipmap/account_icon_qzone"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/login_iv_xl"
            android:background="@mipmap/account_icon_weibo"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/login_iv_qqwb"
            android:background="@mipmap/account_icon_tencent"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/login_iv_rr"
            android:background="@mipmap/account_icon_renren"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>