<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f00"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:gravity="center"
            />
        <view.CircleImageView
            android:id="@+id/act_cehua"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:background="#f00"
            android:src="@mipmap/big_defaulthead_head"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            tabIndicatorColor="@android:color/transparent"
            app:tabMode="scrollable"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            >
        </android.support.design.widget.TabLayout>

        <ImageView
            android:id="@+id/act_im"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_addlink_add_disable"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"></android.support.v4.view.ViewPager>
</LinearLayout>
